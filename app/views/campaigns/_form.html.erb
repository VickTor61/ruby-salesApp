<%= form_with model: campaign do |form| %>
  <div class="form-group-sm p-2">
    <%= form.label :name %><br>
    <%= form.text_field :name, class: 'form-control'%>

    <% campaign.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="form-group-sm p-2">
    <%= form.label :message %><br>
    <%= form.text_area :message, class: 'form-control' %>

    <% campaign.errors.full_messages_for(:message).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <div class="form-group-sm p-3">
    <%= form.submit %>
  </div>
<% end %>